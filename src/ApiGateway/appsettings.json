{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "order-route": {
        "ClusterId": "order-service",
        "Match": {
          "Path": "/order-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/order-service"
          }
        ]
      },
      "product-route": {
        "ClusterId": "product-service",
        "Match": {
          "Path": "/product-service/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/product-service"
          }
        ]
      }
    },
    "Clusters": {
      "order-service": {
        "Destinations": {
          "order-service-1": {
            "Address": "http://order-service:5103"
          }
        }
      },
      "product-service": {
        "Destinations": {
          "product-service-1": {
            "Address": "http://product-service:5041"
          }
        }
      }
    }
  }
}